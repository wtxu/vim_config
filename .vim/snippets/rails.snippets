snippet r_rdt   转向
	redirect_to :${1}
snippet r_upa   更新字段
	update_attributes${1}
# Controller
snippet r_bff   重用控制器方法
	before_filter :${1}
# Model
snippet r_adc   增加数据表字段
	add_column :${1}
snippet r_hsm   一对多
	has_many :${1}
snippet r_bet   多对一
	belongs_to :${1}
snippet r_vd    数据验证
	validates :${1}
snippet r_vdpo  数据验证：必填
	validates_presence_of :${1}
# View
snippet r_fl    显示提示信息
	flash[:${1}]
